{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "rules": {
    "interface-over-type-literal": false,
    "jsx-no-lambda": false,
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "esSpecCompliant": true
      }
    ],
    "variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore", "allow-pascal-case"],
    "whitespace": [
      true,
      "check-rest-spread",
      "check-branch",
      "check-operator",
      "check-typecast",
      "check-decl",
      "check-module",
      "check-separator",
      "check-type",
      "check-type-operator",
      "check-preblock"
    ]
  }
}
